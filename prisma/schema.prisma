generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id     String @id @default(cuid())
  name   String
  author String
  ISBN   String

  // keys
  authorId   String
  memberId   String // member that currently has this book checked out 
  //relations
  bookAuthor Author       @relation(fields: [authorId], references: [id])
  bookMember Member       @relation(fields: [memberId], references: [id])
  genres     BookGenres[]
  genreId    String?
  Genre      Genre?       @relation(fields: [genreId], references: [id])
}

model Author {
  id        String @id @default(cuid())
  name      String
  biography String
  Book      Book[]
}

model Genre {
  id    String       @id @default(cuid())
  name  String
  books BookGenres[]
  Book  Book[]
}

model Member {
  id      String @id @default(cuid())
  name    String
  email   String
  address String
  Book    Book[]
}

model BookGenres {
  id      String @id @default(cuid())
  bookId  String
  genreId String
  Book    Book   @relation(fields: [bookId], references: [id])
  Genre   Genre  @relation(fields: [genreId], references: [id])
}

